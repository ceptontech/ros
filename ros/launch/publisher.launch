<!--
    Launches nodelet manager and loads the PubsliherNodelet to it.
-->
<launch>
    <arg name="config_path" default="$(find cepton_ros)/config/default_params.yaml" doc="Path to the YAML config file"/>
    <arg name="capture_path" default="" doc="Optional path to pcap file"/>
    
    <node pkg="nodelet" type="nodelet" name="cepton_publisher" args="load cepton_ros/PublisherNodelet cepton_manager" output="screen">
        <rosparam file="$(arg config_path)"/>
        <param name="capture_path" value="$(arg capture_path)" />
    </node>
</launch>